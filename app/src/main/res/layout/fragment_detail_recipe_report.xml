<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:layout_height="match_parent"
    tools:context=".Admin.Fragment.DetailRecipeReport">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_back"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/popsem"
                        android:text="Detail Recipe Report"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <ImageButton
                        android:id="@+id/btn_delete"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_delete" />

                </RelativeLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@color/black"
                    app:civ_border_color="@color/main"
                    app:civ_border_width="@dimen/_2sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_1"
                    android:layout_toRightOf="@id/img_profile"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/img_profile"
                        android:fontFamily="@font/popmed"
                        android:text="Username"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/img_profile"
                        android:layout_gravity="center"
                        android:fontFamily="@font/popmed"
                        android:text="time"
                        android:textSize="@dimen/_7sdp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/popmed"
                    android:text="Date"
                    android:textSize="@dimen/_7sdp" />

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_1"
                    android:layout_toRightOf="@+id/img_profile"
                    android:fontFamily="@font/popmed"
                    android:text="Report"
                    android:textSize="@dimen/_6sdp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_1"
                    android:layout_toRightOf="@+id/img_profile"
                    android:backgroundTint="@color/main"
                    android:fontFamily="@font/popmed"
                    android:text="Show recipe"
                    android:stateListAnimator="@null"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_7sdp"
                    app:cornerRadius="@dimen/_8sdp" />


            </RelativeLayout>


            <TextView

                android:id="@+id/tv_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title: "
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_7sdp"
                android:fontFamily="@font/popmed"/>

            <TextView

                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/popmed"/>
            <ImageView
                android:id="@+id/iv_report"
                android:layout_width="@dimen/_300sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="@dimen/_300sdp"/>



            <TextView

                android:id="@+id/tv_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason: "
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_7sdp"
                android:fontFamily="@font/popmed"/>

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/popmed"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_unblock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unblock"
                    app:cornerRadius="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:backgroundTint="@color/blue"
                    android:textSize="@dimen/_9sdp"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:text="Accept"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:stateListAnimator="@null"
                    android:textSize="@dimen/_9sdp"
                    app:backgroundTint="@color/blue"
                    app:cornerRadius="@dimen/_5sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_rejected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_accept"
                    android:text="Rejected"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cornerRadius="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:stateListAnimator="@null"
                    app:backgroundTint="#F4152F"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_9sdp"/>





            </LinearLayout>





        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>