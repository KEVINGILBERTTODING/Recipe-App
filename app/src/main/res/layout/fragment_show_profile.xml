<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ShowProfileFragment">

    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btn_back"
                android:fontFamily="@font/popmed"
                android:layout_centerInParent="true"
                android:text="Back"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_more_vertical" />




        </RelativeLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"

        android:layout_marginTop="@dimen/_15sdp"

        android:layout_below="@+id/app_bar"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                app:civ_border_width="@dimen/_3sdp"
                app:civ_border_color="@color/main"
                android:src="@color/black" />
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/popsem"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:scrollbarSize="@dimen/_12sdp"
                android:layout_toRightOf="@+id/btn_back"
                android:text="Username"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_mail"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_back"
                    android:fontFamily="@font/popmed"
                    android:text="Email"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />



            </LinearLayout>

            <TextView
                android:id="@+id/tv_biography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btn_back"
                android:fontFamily="@font/popmed"
                android:text="Biography"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lr_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_post"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/popsem"
                        android:textSize="@dimen/_11sdp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:text="Post"
                        android:fontFamily="@font/popmed"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:id="@+id/lr_followers"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_followers"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/popsem"
                        android:textSize="@dimen/_11sdp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:text="Followers"
                        android:fontFamily="@font/popmed"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/gray"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <LinearLayout
                    android:id="@+id/lr_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_following"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/popsem"
                        android:textSize="@dimen/_11sdp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:text="Following"
                        android:fontFamily="@font/popmed"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_back"
                    android:fontFamily="@font/popmed"
                    android:text="Date"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_back"
                    android:fontFamily="@font/popmed"
                    android:text="Time"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_unfollow"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:text="Unfollow"
                    app:cornerRadius="@dimen/_5sdp"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_10sdp"
                    android:stateListAnimator="@null"
                    app:backgroundTint="@color/gray"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_follow"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:text="Follow"
                    android:stateListAnimator="@null"
                    app:elevation="0dp"
                    app:cornerRadius="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_10sdp"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_message"
                    android:layout_width="@dimen/_100sdp"
                    android:stateListAnimator="@null"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    app:cornerRadius="@dimen/_5sdp"
                    app:elevation="0dp"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_10sdp"
                    android:textAllCaps="false"/>

            </LinearLayout>


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicatorFullWidth="true"
                app:tabTextAppearance="@style/TabFont">

            </com.google.android.material.tabs.TabLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>