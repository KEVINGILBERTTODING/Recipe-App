<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relativeLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlChat"
        android:layout_height="wrap_content">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftEdgeSwipeOffset="0dp"
        app:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lr_delete"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:background="@color/dark_grey"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnArchieve"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_archieve"/>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relative2"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@color/gray" />

        <LinearLayout
            android:id="@+id/lrUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivUser"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tvDate"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:fontFamily="@font/popsem"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"/>


                <ImageView
                    android:id="@+id/img_verified"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_verified"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/ivBlock"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:backgroundTint="@color/black"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:src="@drawable/ic_block2"/>


                <TextView
                    android:id="@+id/tvChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popmed"
                    android:maxLength="30"
                    android:layout_toRightOf="@+id/ivBlock"
                    android:textSize="@dimen/_9ssp"/>


            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/_7ssp"
            android:visibility="visible"
            android:padding="@dimen/_7sdp"/>

        <TextView
            android:id="@+id/tvCountNewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/_8ssp"
            android:layout_below="@id/tvDate"
            android:visibility="gone"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/white"
            android:background="@drawable/container_count_total_message"
            android:padding="@dimen/_2sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/ivUser"
            android:layout_below="@id/ivUser"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/gray"/>


    </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>
    </RelativeLayout>



</RelativeLayout>